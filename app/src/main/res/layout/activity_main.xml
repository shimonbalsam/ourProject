<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".views.MainFragment">


            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="parent" >

                <TableRow>

                    <TextView
                        android:background="#1199"
                        android:padding="8dp"
                        android:text="Inviting Private"
                        android:textAlignment="center"
                        android:textColor="#332"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:background="#FF3F51B5"
                        android:padding="8dp"
                        android:text="First name"
                        android:textColor="#ffff" />

                    <EditText
                        android:id="@+id/editFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Enter first name" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:background="#FF3F51B5"
                        android:padding="8dp"
                        android:text="Last name"
                        android:textColor="#ffff" />

                    <EditText
                        android:id="@+id/editLastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Enter last name" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:background="#FF3F51B5"
                        android:padding="8dp"
                        android:text="Addressee location"
                        android:textColor="#ffff" />

                    <Button
                        android:id="@+id/Gps_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPostalAddress" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:background="#FF3F51B5"
                        android:padding="8dp"
                        android:text="Phone"
                        android:textColor="#ffff" />

                    <EditText
                        android:id="@+id/editPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:background="#1199"
                        android:padding="8dp"
                        android:text="Percil Details"
                        android:textAlignment="center"
                        android:textColor="#332"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:background="#FF3F51B5"
                        android:padding="8dp"
                        android:text="Parcel Address"
                        android:textColor="#ffff" />

                    <EditText
                        android:id="@+id/editParcelAdress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPostalAddress" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:background="#FF3F51B5"
                        android:padding="8dp"
                        android:text="Parcel size"
                        android:textColor="#ffff" />


                    <Spinner
                        android:id="@+id/size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/size" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:background="#FF3F51B5"
                        android:padding="8dp"
                        android:text="Parcel weight"
                        android:textColor="#ffff" />

                    <Spinner
                        android:id="@+id/Weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/weight" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:background="#FF3F51B5"
                        android:padding="8dp"
                        android:text="Parcel fragile"
                        android:textColor="#ffff" />

                    <Spinner
                        android:id="@+id/frigile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/fragileparcel" />
                </TableRow>


            </TableLayout>

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="475dp"
                app:layout_constraintTop_toBottomOf="@id/tableLayout"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <Button
                android:id="@+id/newIntent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="newIntent"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="475dp"
                app:layout_constraintTop_toBottomOf="@id/buttonAdd"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <!--<TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintTop_toBottomOf="@id/buttonAdd"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="499dp"
                app:layout_constraintTop_toBottomOf="@id/result"
                app:layout_constraintLeft_toLeftOf="parent"/>-->



            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>